<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="at.maymay.convertme">
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".application.config.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_convertme"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_convertme"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".application.core.Converter"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".application.core.ui.Settings"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>